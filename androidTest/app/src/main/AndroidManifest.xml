<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ytwong239.scm.cubicdebug">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/appicon3"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/appicon3_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="ytwong239.scm.cubicdebug.SplashScreenActivity"
            android:noHistory="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ytwong239.scm.cubicdebug.TurnOnBluetoothActivity"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name="ytwong239.scm.cubicdebug.ConnectToyBluetoothActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="ytwong239.scm.cubicdebug.BluetoothActivity"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name="ytwong239.scm.cubicdebug.TempActivity"
            android:screenOrientation="landscape"></activity>
        <activity android:name="ytwong239.scm.cubicdebug.DebugActivity"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>