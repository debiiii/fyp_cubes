<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC580"
    tools:context="ytwong239.scm.cubicdebug.ConnectToyBluetoothActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/connectToyPic"
            android:layout_width="320dp"
            android:layout_height="277dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/connecttoy" />

        <ImageButton
            android:id="@+id/connectOkBtn"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/connectToyPic"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/allowbluetoothokbtn" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
